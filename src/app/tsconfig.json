{
    "compilerOptions":
    {
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": ["es6", "dom"],
        "mapRoot": "./",
        "module": "es6",
        "moduleResolution": "node",
        "outDir": "../dist/out-tsc",
        "sourceMap": true,
        "target": "es5",
        "typeRoots": [
            "../node_modules/@types"
        ]
    },
    "exclude": [
        "assets"
    ],
    "filesGlob": ["main.ts", "typings.d.ts", "app/**/*.ts", "!app/**/*.spec.ts"],
    "typeRoots": [
        "../node_modules/@types/"
    ]
}